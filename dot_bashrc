# ~/.bashrc: executed by bash(1) for non-login shells
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

# if not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

# don't put duplicate lines or lines starting with space in the history
# see bash(1) for more options
HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS
shopt -s checkwinsize

# set variable identifying the chroot you work in (used in the prompt below)
if [ -z "${debian_chroot:-}" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

# set a fancy prompt (non-color, unless we know we "want" color)
case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

# current git branch name function
parse_git_branch() {
    branch=$(git branch --show-current 2>/dev/null)
    [[ -n "$branch" ]] && echo " ${branch#acicovic/}"
}

if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\A/\u\[\033[00m\] \[\033[01;34m\]\W\[\033[00m\]\[\e[01;31m\]$(parse_git_branch)\[\033[00m\] \$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u:\w\$ '
fi
unset color_prompt

# if this is an xterm set the title to user@host:dir
case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
    ;;
*)
    ;;
esac

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias host='hostname'

# dev env
export PATH=$PATH:/home/acicovic/bin
export EDITOR=vim
export PJRTSO='/localdev/acicovic/tt-xla/build/pjrt_implementation/src/pjrt_plugin_tt.so'
export XLADIR='/localdev/acicovic/tt-xla'

# dev aliases
alias home='cd /localdev/acicovic'
alias init='echo -n "Create .vscode/ ... " && mkdir -p .vscode && cp ~/.vscode-my/launch.json .vscode/ && echo -n "Initialize submodules ... " && git submodule update --init --recursive && echo "Activate venv ... " && source venv/activate && echo "Install hooks ... " && pre-commit install'
alias a='source venv/activate'
alias cmake-rel='cmake -B build -G Ninja -DCMAKE_EXPORT_COMPILE_COMMANDS=ON'
alias cmake-dbg='cmake -B build -G Ninja -DCMAKE_BUILD_TYPE=Debug -DCMAKE_EXPORT_COMPILE_COMMANDS=ON'
alias build='a && cmake --build build/'
alias pre-all='pre-commit run --all-files'
alias cont='docker exec -it -w /localdev/acicovic/tt-xla --user acicovic $(docker ps | grep acicovic-for-reservation | awk "{print \$1}") bash'
alias mlir-ver='head -n 20 $XLADIR/third_party/CMakeLists.txt | grep "set(TT_MLIR_VERSION" | sed -n '\''s/.*"\([0-9a-fA-F]\{40\}\)".*/\1/p'\'''

alias b-xla-t='cmake --build build/ --target TTPJRTTests'
alias r-xla-t='ctest --test-dir build/ -R PJRT -V'
alias c-xla-t='cd build/ && ninja -t clean TTPJRTTests && cd ..'

alias push='git push origin HEAD'
alias st='git status'
alias log='git log --pretty=format:"%C(yellow)%h%Creset %Cgreen%ad%Creset %C(blue)%an%Creset %C(red)%d%Creset %s" --date=short'
alias purge='git clean -xdf'
alias diff='git diff'

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc)
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi
